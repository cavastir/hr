function getAltText(src: string) {
  const filename = src.split('/').pop()?.split('.')[0] || '';
  return filename.split('-').slice(2).join(' ');
}

---

<section class="py-12 relative overflow-hidden rounded bg-hr-light-gray">
  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row gap-12">
      <div class="lg:w-1/2">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6 text-hr-dark">We deliver high-quality survey solutions tailored to your construction project.</h2>
        <div class="aspect-video bg-gray-300 rounded-lg overflow-hidden mb-6 relative" id="imageSlider">
          {images.map((src, index) => (
            <img 
              src={src} 
              alt={`HR Surveyors in action: ${getAltText(src)}`} 
              class={`object-cover object-center w-full h-full absolute top-0 left-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
              data-index={index}
            />
          ))}
        </div>
      </div>
      <div class="lg:w-1/2 relative">
        <div class="space-y-4 services-container h-[600px] overflow-y-auto pr-4">
          {updatedServices.map((service, index) => (
            <div class="bg-white rounded-lg shadow-md transition-all duration-300 group hover:bg-hr-accent">
              <button 
                class="w-full text-left flex justify-between items-center px-4 py-4 service-button focus:outline-none"
                data-index={index}
              >
                <h3 class="text-xl font-semibold text-hr-dark group-hover:text-white">{service.title}</h3>
                <Icon name={service.icon} class="icon w-6 h-6 transform transition-transform duration-300 text-hr-dark group-hover:text-white" />
              </button>
              <div class="hidden px-4 pb-4 service-content">
                <p class="text-hr-dark mb-4 group-hover:text-white">{service.shortDesc}</p>
                <button class="text-hr-accent group-hover:text-white hover:underline transition-colors duration-300 learn-more-button focus:outline-none">
                  Learn more
                </button>
                <div class="hidden mt-4 text-hr-dark group-hover:text-white full-description">
                  <p>{service.fullDesc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
        <div class="absolute bottom-4 right-4 flex items-center">
          <a href="/services" class="text-hr-dark hover:text-hr-accent transition-colors duration-300 flex items-center group">
            <span class="mr-2 text-sm">View all our services</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
            <span class="sr-only">View all services</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function initializeServices() {
    const serviceButtons = document.querySelectorAll('.service-button');
    const learnMoreButtons = document.querySelectorAll('.learn-more-button');

    function closeAllServices() {
      document.querySelectorAll('.service-content').forEach(content => {
        content.classList.add('hidden');
      });
      document.querySelectorAll('.service-button .icon').forEach(icon => {
        icon.classList.remove('rotate-180');
      });
    }

    serviceButtons.forEach(button => {
      button.addEventListener('click', () => {
        const content = button.nextElementSibling;
        const icon = button.querySelector('.icon');
        if (content) {
          if (content.classList.contains('hidden')) {
            closeAllServices();
            content.classList.remove('hidden');
            icon?.classList.add('rotate-180');
          } else {
            content.classList.add('hidden');
            icon?.classList.remove('rotate-180');
          }
        }
      });
    });

    learnMoreButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.stopPropagation();
        const serviceContent = button.closest('.service-content');
        const fullDescription = serviceContent?.querySelector('.full-description');

        if (fullDescription) {
          fullDescription.classList.toggle('hidden');
          button.textContent = fullDescription.classList.contains('hidden') ? 'Learn more' : 'Show less';
        }
      });
    });
  }

  function initializeImageSlider() {
    const slider = document.getElementById('imageSlider');
    const images = slider?.querySelectorAll('img');
    let currentIndex = 0;

    function showNextImage() {
      if (images) {
        images[currentIndex].classList.remove('opacity-100');
        images[currentIndex].classList.add('opacity-0');
        currentIndex = (currentIndex + 1) % images.length;
        images[currentIndex].classList.remove('opacity-0');
        images[currentIndex].classList.add('opacity-100');
      }
    }

    setInterval(showNextImage, 5000); // Change image every 5 seconds
  }

  // Run on initial load
  initializeServices();
  initializeImageSlider();

  // Re-run after Astro page transitions
  document.addEventListener('astro:page-load', () => {
    initializeServices();
    initializeImageSlider();
  });
</script>