---
import { getEntry } from 'astro:content';
import { Icon } from 'astro-icon/components';

const { data } = await getEntry('services', 'services');
const { services } = data;
---

<section class="py-20 bg-gradient-to-b from-gray-100 to-white relative overflow-hidden rounded">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4 text-hr-dark">Our Services</h2>
    <p class="text-xl text-center mb-16 text-gray-600 max-w-2xl mx-auto">
      HR Surveyors provides comprehensive surveying solutions for a wide range of projects, ensuring precision and efficiency at every step.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 relative z-10">
      {services.map((service, index) => (
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
          <div class="flex items-center mb-4">
            <div class="bg-hr-accent p-3 rounded-full mr-4 group-hover:scale-110 transition-transform duration-300">
              <Icon name={`heroicons:${service.icon}`} class="w-6 h-6 text-hr-dark" />
            </div>
            <h3 class="text-xl font-semibold text-hr-dark">{service.title}</h3>
          </div>
          <p class="text-gray-600 mb-4">{service.shortDesc}</p>
          <a href={`/services/${service.title.toLowerCase().replace(/\s+/g, '-')}`} class="text-hr-accent hover:underline inline-flex items-center group">
            Learn more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full">
    <svg class="w-full h-full text-hr-accent opacity-5" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
      <path fill="currentColor" d="M44.9,-76.8C58.1,-69.3,68.9,-56.3,77.1,-41.9C85.3,-27.5,90.9,-11.7,89.8,3.7C88.7,19,80.8,33.9,71.1,47.1C61.4,60.3,49.9,71.8,36.2,78.1C22.5,84.4,6.6,85.5,-8.9,83.1C-24.4,80.7,-39.5,74.7,-52.4,65.6C-65.3,56.5,-76,44.3,-82.5,29.7C-89,15.1,-91.3,-1.9,-87.8,-17.5C-84.3,-33.1,-75,-47.3,-62.6,-57.9C-50.2,-68.5,-34.7,-75.5,-19.2,-79.2C-3.7,-82.9,11.8,-83.3,26.3,-80.6C40.8,-77.9,54.3,-72.1,44.9,-76.8Z" transform="translate(100 100)" />
    </svg>
  </div>
</section>