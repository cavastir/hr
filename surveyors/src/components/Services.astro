---
import { getEntry } from 'astro:content';
import { Icon } from 'astro-icon/components';

const { data } = await getEntry('services', 'services');
const { services } = data;
---

<section class="py-20 bg-gradient-to-b from-gray-100 to-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16 text-hr-dark">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col">
          <div class="bg-hr-accent p-6 flex items-center justify-center">
            <Icon name={`heroicons:${service.icon}`} class="w-16 h-16 text-white" />
          </div>
          <div class="p-6 flex-grow">
            <h3 class="text-xl font-semibold mb-2 text-hr-dark">{service.title}</h3>
            <p class="text-gray-600 mb-4">{service.shortDesc}</p>
          </div>
          <div class="px-6 pb-6">
            <button class="text-hr-accent hover:underline focus:outline-none inline-flex items-center" data-service={service.title}>
              Learn more
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<dialog id="serviceModal" class="p-6 max-w-2xl rounded-lg">
  <h3 class="text-2xl font-bold mb-4"></h3>
  <p class="mb-4"></p>
  <button class="bg-hr-accent text-white px-4 py-2 rounded" id="closeModal">Close</button>
</dialog>

<script define:vars={{ services }}>
  const modal = document.querySelector('#serviceModal');
  const closeBtn = document.querySelector('#closeModal');

  document.querySelectorAll('[data-service]').forEach(btn => {
    btn.addEventListener('click', () => {
      const service = services.find(s => s.title === btn.dataset.service);
      modal.querySelector('h3').textContent = service.title;
      modal.querySelector('p').textContent = service.longDesc;
      modal.showModal();
    });
  });

  closeBtn.addEventListener('click', () => modal.close());
</script>