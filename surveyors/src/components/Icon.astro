---
import { getImage } from "astro:assets";

export interface Props {
  name: string;
  class?: string;
  width?: number;
  height?: number;
}

const { name, class: className, width = 24, height = 24 } = Astro.props;

const iconPath = `/icons/${name}.svg`;
const { src } = await getImage({ src: iconPath, width, height });
---

<img src={src} alt={`${name} icon`} class={className} width={width} height={height} />
