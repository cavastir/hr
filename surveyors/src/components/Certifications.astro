---
const certifications = [
  { name: 'ISO 9001', logo: '/path-to-iso-9001-logo.png' },
  { name: 'RICS', logo: '/path-to-rics-logo.png' },
  { name: 'Chartered Surveyors', logo: '/path-to-chartered-surveyors-logo.png' },
  { name: 'ACENZ', logo: '/path-to-acenz-logo.png' },
];
---

<section class="bg-hr-light py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold text-center text-hr-dark mb-8">Our Professional Certifications</h2>
    <div class="flex justify-center items-center space-x-8 flex-wrap">
      {certifications.map((cert) => (
        <div class="w-32 h-20 flex items-center justify-center">
          <img src={cert.logo} alt={`${cert.name} certification`} class="max-w-full max-h-full object-contain" />
        </div>
      ))}
    </div>
  </div>
</section>