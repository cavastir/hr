---
import { Image } from 'astro:assets';
import fallbackImage from '../assets/fallback-hero.jpg';

let heroImage;
try {
  heroImage = (await import('../assets/hero-image.jpg')).default;
} catch (e) {
  console.warn('Hero image not found, using fallback image');
  heroImage = fallbackImage;
}
---

<section class="relative overflow-hidden bg-hr-dark rounded">
  <div class="absolute inset-0 rounded overflow-hidden">
    <Image
      src={heroImage}
      alt="Engineering survey site"
      class="object-cover object-center w-full h-full"
      width={1920}
      height={1080}
      loading="eager"
      format="webp"
    />
  </div>

  <div class="relative z-10 container mx-auto px-4 py-12 flex flex-col justify-end h-[600px]">
    <div class="w-full sm:w-[50%] bg-white bg-opacity-90 p-6 sm:p-8 rounded-lg">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-hr-dark leading-tight mb-2 sm:mb-3">
        Precision Delivered.<br />Solutions Engineered.
      </h1>
      <p class="text-sm sm:text-base text-gray-700 mb-4 sm:mb-6">
        Australia's leading engineering surveyors since 2012, delivering unmatched expertise nationwide.
      </p>
      <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
        <a href="/contact" class="bg-hr-accent text-hr-dark px-4 sm:px-6 py-2 sm:py-3 rounded font-semibold hover:bg-opacity-90 transition-colors relative overflow-hidden group inline-block text-center text-sm sm:text-base">
          <span class="relative z-10 group-hover:text-white transition-colors">Start Your Project</span>
          <span class="absolute inset-0 bg-hr-dark transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
        </a>
        <a href="/services" class="bg-transparent border-2 border-hr-dark text-hr-dark px-4 sm:px-6 py-2 sm:py-3 rounded font-bold hover:bg-hr-dark hover:text-white transition-all duration-300 text-center text-sm sm:text-base">
          Explore Our Services
        </a>
      </div>
    </div>
  </div>
</section>

