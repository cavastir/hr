---
import { Image } from 'astro:assets';
import fallbackImage from '../assets/fallback-hero.jpg';
import Certifications from './Certifications.astro';

let heroImage;
try {
  heroImage = (await import('../assets/hero-image.png')).default;
} catch (e) {
  console.warn('Hero image not found, using fallback image');
  heroImage = fallbackImage;
}
---

<section class="relative overflow-hidden bg-hr-dark mx-4 my-4 rounded">
  <div class="absolute inset-0 rounded overflow-hidden">
    <Image
      src={heroImage}
      alt="Engineering survey site"
      class="object-cover object-center w-full h-full"
      width={1920}
      height={1080}
    />
  </div>

  <div class="relative z-10 container mx-auto px-4 pt-32 pb-16 flex flex-col justify-between min-h-[calc(100vh-2rem)]">
    <div class="max-w-2xl bg-hr-dark bg-opacity-70 p-8 clip-path-hero rounded self-start mt-auto">
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white leading-tight mb-4">
        Elevating Precision
      </h1>
      <p class="text-2xl sm:text-3xl font-light text-white mb-6">
        Australia's Leading Engineering Surveyors
      </p>
      <p class="text-lg text-gray-300 mb-8">
        Delivering high-quality survey solutions since 2012.
      </p>
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="/contact" class="bg-hr-accent text-hr-dark px-8 py-4 rounded font-bold hover:bg-white transition-all duration-300 text-center">
          Start Your Project
        </a>
        <a href="/services" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded font-bold hover:bg-white hover:text-hr-dark transition-all duration-300 text-center">
          Our Services
        </a>
      </div>
    </div>
  </div>

  <div class="relative z-10 bg-gray-100 py-8">
    <Certifications />
  </div>
</section>

<style>
  .clip-path-hero {
    clip-path: polygon(
      0 0, 100% 0, 100% 80%, 
      90% 80%, 90% 90%, 
      80% 90%, 80% 100%, 
      0 100%
    );
  }
</style>