---
import { Image } from 'astro:assets';
import fallbackImage from '../assets/fallback-hero.jpg';

let heroImage;
try {
  heroImage = (await import('../assets/hero-image.jpg')).default;
} catch (e) {
  console.warn('Hero image not found, using fallback image');
  heroImage = fallbackImage;
}
---

<section class="relative overflow-hidden bg-hr-dark rounded">
  <div class="absolute inset-0 rounded overflow-hidden">
    <Image
      src={heroImage}
      alt="Engineering survey site"
      class="object-cover object-center w-full h-full"
      width={1920}
      height={1080}
      loading="eager"
      format="webp"
    />
  </div>

  <div class="relative z-10 container mx-auto px-4 py-8 sm:py-12 flex flex-col justify-end h-[400px] sm:h-[600px]">
    <div class="w-full sm:w-[50%] bg-hr-light bg-opacity-95 p-4 sm:p-6 md:p-8 rounded-lg">
      <h1 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-bold text-hr-dark leading-tight mb-2 sm:mb-3">
        Precision Delivered.<br />Solutions Engineered.
      </h1>
      <p class="text-xs sm:text-sm md:text-base text-hr-dark mb-3 sm:mb-4 md:mb-6">
        Australia's leading engineering surveyors since 2012, delivering unmatched expertise nationwide.
      </p>
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-4">
        <a href="/contact" class="bg-hr-accent text-hr-light px-4 sm:px-6 py-2 rounded text-sm sm:text-base font-semibold hover:bg-opacity-90 transition-colors">
          Start Your Project
        </a>
        <a href="/services" class="bg-transparent border-2 border-hr-dark text-hr-dark px-4 sm:px-6 py-2 rounded text-sm sm:text-base font-bold hover:bg-hr-dark hover:text-hr-light transition-all duration-300">
          Explore Our Services
        </a>
      </div>
    </div>
  </div>
</section>

