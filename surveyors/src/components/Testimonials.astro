const testimonials = [
  {
    quote: "HR Surveyors' precision is top-notch.",
    author: "Dr Prat",
    position: "Developer, Cavastir Pte. Ltd",
  },
  {
    quote: "Nice.",
    author: "Detective Harris",
    position: "Sergeant, South Park",
  },
  {
    quote: "XYZ.",
    author: "Pat",
    position: "Director, PATRICE AGENCY",
  },
];
---

<section class="py-20 text-hr-dark bg-hr-light-gray rounded relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <h2 class="text-4xl font-bold text-center mb-16">What Our Clients Say</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <span class="text-4xl text-hr-accent mb-4 block">"</span>
          <p class="mb-4 italic text-hr-dark">{testimonial.quote}</p>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-hr-accent rounded-full flex items-center justify-center mr-4">
              <span class="text-2xl text-white">ðŸ‘¤</span>
            </div>
            <div>
              <p class="font-semibold text-hr-dark">{testimonial.author}</p>
              <p class="text-sm text-gray-600">{testimonial.position}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @supports not (backdrop-filter: blur(4px)) {
    .backdrop-blur-sm {
      background-color: rgba(18, 18, 18, 0.95);
    }
  }
</style>