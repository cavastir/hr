---
// Array of Instagram post data
const instagramPosts = [
  { image: '/images/instagram/instagram-post-earthworks.jpg' },
  { image: '/images/instagram/instagram-post-factory-scan.jpg' },
  { image: '/images/instagram/instagram-post-pile-setout.jpg' },
  { image: '/images/instagram/instagram-post-survey-vehicle.jpg' },
  { image: '/images/instagram/instagram-post-construction-site.jpg' },
  { image: '/images/instagram/instagram-post-team-work.jpg' },
  { image: '/images/instagram/instagram-post-equipment-setup.jpg' },
  { image: '/images/instagram/instagram-post-project-completion.jpg' },
];

const instagramUrl = 'https://www.instagram.com/hrsurveyors';
---

<section class="py-20 bg-gray-100 rounded">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-8 text-hr-dark">Follow Us on Instagram</h2>
    <p class="text-center mb-12 text-gray-600">Stay updated with our latest projects and team activities</p>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {instagramPosts.map((post) => (
        <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="block aspect-square overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
          <img src={post.image} alt="Instagram post" class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" />
        </a>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-hr-accent hover:underline">
        <span class="mr-2">View more on Instagram</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
