---
import { Image } from 'astro:assets';
import logoImage from '../assets/hr-surveyors-logo-dark.png';
import hrUtilitiesLogo from '../assets/hr-utilities-logo.png';

const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: 'Facebook', icon: 'facebook', url: '#' },
  { name: 'LinkedIn', icon: 'linkedin', url: '#' },
  { name: 'Instagram', icon: 'instagram', url: '#' },
];
---

<footer class="bg-hr-dark text-hr-light py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="space-y-4">
        <Image 
          src={logoImage} 
          alt="HR Surveyors Logo" 
          class="h-12 w-auto"
        />
        <p class="text-sm">Delivering Efficient and Accurate Surveying Solutions since 2012.</p>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/services" class="hover:text-hr-accent transition-colors">Services</a></li>
          <li><a href="/projects" class="hover:text-hr-accent transition-colors">Projects</a></li>
          <li><a href="/careers" class="hover:text-hr-accent transition-colors">Careers</a></li>
          <li><a href="/contact" class="hover:text-hr-accent transition-colors">Contact</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
        <address class="not-italic">
          <p>123 Survey Street, Engineering City, 12345</p>
          <p>Phone: (123) 456-7890</p>
          <p>Email: info@hrsurveyors.com</p>
        </address>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-4">Follow Us</h4>
        <div class="flex space-x-4">
          {socialLinks.map((link) => (
            <a href={link.url} class="text-hr-light hover:text-hr-accent transition-colors" aria-label={link.name}>
              <svg class="w-6 h-6 fill-current">
                <use xlink:href={`/social-icons.svg#${link.icon}`}></use>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- HR Utilities Section -->
    <div class="mt-12 pt-8 border-t border-gray-700">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="flex items-center space-x-4 mb-4 md:mb-0">
          <Image 
            src={hrUtilitiesLogo} 
            alt="HR Utilities Logo" 
            class="h-10 w-auto"
          />
          <p class="text-sm">Subsurface Mapping</p>
        </div>
        <p class="text-sm mb-4 md:mb-0 text-center md:text-left">
          Discover our sister company specializing in advanced subsurface mapping solutions.
        </p>
        <a href="https://www.hrutilities.com" class="bg-hr-accent text-hr-dark px-6 py-2 rounded font-semibold hover:bg-opacity-90 transition-colors">
          Explore HR Utilities
        </a>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-700 text-center">
      <p>&copy; {currentYear} HR Surveyors. All rights reserved.</p>
    </div>
  </div>
</footer>