---
import { Image } from 'astro:assets';
import logoImage from '../assets/hr-surveyors-logo-light.png';

const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: 'Facebook', icon: 'facebook', url: 'https://m.facebook.com/HRSurveyors/' },
  { name: 'LinkedIn', icon: 'linkedin', url: 'https://www.linkedin.com/company/hrsurveyors' },
  { name: 'Instagram', icon: 'instagram', url: 'https://www.instagram.com/hrsurveyors' },
];

const offices = [
  { name: 'HQ', location: 'Clayton, VIC, 3168' },
  { name: 'Geelong office', location: 'Newtown, VIC, 3220' },
  { name: 'WA office', location: 'West Leederville, WA, 6007' },
  { name: 'QLD/Northern NSW office', location: 'Murwillumbah, NSW, 2484' },
  { name: 'SA office', location: 'Edinburgh North, SA, 5113' },
];
---

<footer class="bg-gray-800 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
      <div class="space-y-4">
        <Image 
          src={logoImage} 
          alt="HR Surveyors Logo" 
          class="h-12 w-auto mb-6 focus:outline-none"
        />
        <p class="text-sm leading-relaxed">Delivering Efficient and Accurate Surveying Solutions since 2012.</p>
        <div class="pt-4">
          <a href="https://www.hrutilities.com.au" target="_blank" rel="noopener noreferrer" class="text-hr-accent hover:text-white transition-colors font-semibold text-sm">
            HR Utilities
          </a>
          <p class="text-sm mt-2 leading-relaxed">Discover our sister company specializing in advanced subsurface mapping solutions.</p>
        </div>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-6 text-hr-accent">Quick Links</h4>
        <ul class="space-y-3 text-sm">
          <li><a href="/services" class="hover:text-hr-accent transition-colors">Services</a></li>
          <li><a href="/about" class="hover:text-hr-accent transition-colors">About</a></li>
          <li><a href="/careers" class="hover:text-hr-accent transition-colors">Careers</a></li>
          <li><a href="/contact" class="hover:text-hr-accent transition-colors">Contact</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-6 text-hr-accent">Contact Us</h4>
        <ul class="space-y-4 text-sm">
          {offices.map((office) => (
            <li>
              <p class="font-medium text-hr-accent">{office.name}</p>
              <p>{office.location}</p>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h4 class="text-lg font-semibold mb-6 text-hr-accent">Follow Us</h4>
        <div class="flex space-x-4 mb-6">
          {socialLinks.map((link) => (
            <a href={link.url} class="text-white hover:text-hr-accent transition-colors" aria-label={link.name}>
              <svg class="w-6 h-6 fill-current">
                <use xlink:href={`/social-icons.svg#${link.icon}`}></use>
              </svg>
            </a>
          ))}
        </div>
        <p class="text-sm">
          <span class="font-medium text-hr-accent">Email:</span> <a href="mailto:office@hrsurveyors.com.au" class="hover:text-hr-accent transition-colors">office@hrsurveyors.com.au</a>
        </p>
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-gray-700 text-center text-sm">
      <p>&copy; {currentYear} HR Surveyors. All rights reserved.</p>
    </div>
  </div>
</footer>
