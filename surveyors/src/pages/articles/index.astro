---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all articles
const articles = await getCollection('articles');

// Sort articles by publish date
const sortedArticles = articles.sort((a, b) => 
  new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Get unique categories
const categories = [...new Set(articles.map(article => article.data.category).filter(Boolean))];

// Structured data for articles list
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "HR Surveyors Industry Insights",
  "description": "Professional surveying insights, technical guides, and industry updates from Australia's leading engineering surveyors",
  "publisher": {
    "@type": "Organization",
    "name": "HR Surveyors",
    "logo": {
      "@type": "ImageObject",
      "url": "https://hrsurveyors.com.au/images/logo.png"
    }
  },
  "blogPost": sortedArticles.map(article => ({
    "@type": "BlogPosting",
    "headline": article.data.title,
    "datePublished": article.data.publishDate,
    "description": article.data.description,
    "author": {
      "@type": "Person",
      "name": article.data.author
    }
  }))
};
---

<Layout 
  title="Land Surveying Industry Insights & Expert Guides | HR Surveyors"
  description="Expert insights, technical guides and industry updates on land surveying, engineering surveys and construction surveying across Australia. Trusted by leading builders since 2012."
  type="website"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <main class="bg-white text-hr-dark">
    <nav aria-label="Breadcrumb" class="container mx-auto px-4 py-4">
      <ol class="flex text-sm" itemscope itemtype="https://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item" class="text-hr-dark hover:text-hr-accent">
            <span itemprop="name">Home</span>
          </a>
          <meta itemprop="position" content="1" />
        </li>
        <li class="mx-2">/</li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name" class="text-hr-accent">Industry Insights</span>
          <meta itemprop="position" content="2" />
        </li>
      </ol>
    </nav>

    <section class="py-32">
      <div class="container mx-auto px-4 max-w-6xl">
        <header class="mb-16 text-center">
          <h1 class="text-5xl lg:text-6xl font-bold mb-6 text-hr-dark">Industry Insights</h1>
          <p class="text-xl mb-6 leading-relaxed max-w-3xl mx-auto">
            Expert insights and technical guidance from our team of professional surveyors. 
            Discover articles covering land surveying, engineering surveys, and construction surveying.
          </p>
        </header>

        {categories.length > 0 && (
          <nav aria-label="Article categories" class="mb-12">
            <ul class="flex flex-wrap justify-center gap-4">
              {categories.map(category => (
                <li>
                  <a 
                    href={`#${category}`}
                    class="px-4 py-2 bg-gray-100 rounded-full hover:bg-hr-accent hover:text-white transition-colors"
                  >
                    {category}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" role="feed" aria-label="Articles list">
          {sortedArticles.map((article) => (
            <article class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <a 
                href={`/articles/${article.slug}/`}
                class="block h-full"
                aria-labelledby={`article-${article.slug}`}
              >
                {article.data.image && (
                  <div class="relative h-48 bg-gray-200">
                    <img
                      src={article.data.image}
                      alt=""
                      aria-hidden="true"
                      class="w-full h-48 object-cover"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-6">
                  <h2 id={`article-${article.slug}`} class="text-xl font-semibold mb-2 text-hr-dark">
                    {article.data.title}
                  </h2>
                  <p class="text-gray-600 text-sm mb-4">{article.data.description}</p>
                  <div class="flex items-center text-sm text-gray-500">
                    <time datetime={article.data.publishDate}>
                      {new Date(article.data.publishDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {article.data.location && (
                      <>
                        <span class="mx-2" aria-hidden="true">â€¢</span>
                        <span>{article.data.location}</span>
                      </>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>