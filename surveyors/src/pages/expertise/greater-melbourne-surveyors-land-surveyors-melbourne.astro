---
import Layout from '../../layouts/Layout.astro';
import CallToAction from '../../components/CallToAction.astro';
import ServiceOverview from '../../components/ServiceOverview.astro';

const title = 'Greater Melbourne Surveyors — Land Surveyors Melbourne';
const description = 'Land surveying across Greater Melbourne for design, set-out and approvals.';
---

<Layout title={title} description={description}>
  <!-- Wide band hero with soft overlay -->
  <section class="relative overflow-hidden bg-gray-900">
    <div class="absolute inset-0">
      <img src="/images/land-surveying-hero.jpg" alt="Land surveying Melbourne" class="h-full w-full object-cover opacity-40" loading="eager" />
      <div class="absolute inset-0 bg-gradient-to-b from-gray-900/60 via-gray-900/60 to-gray-900/80"></div>
    </div>
    <div class="relative mx-auto max-w-6xl px-6 pt-28 md:pt-36 pb-16 md:pb-24 text-white">
      <div class="max-w-3xl">
        <h1 class="text-3xl md:text-5xl font-semibold tracking-tight">Greater Melbourne Surveyors</h1>
        <p class="mt-4 md:mt-6 text-base md:text-lg text-gray-100">
          Detail & feature surveys, construction set-out and title boundaries — delivered with dependable methods across Melbourne.
        </p>
        <div class="mt-6 md:mt-8 flex flex-wrap gap-3">
          <a href="/contact/" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-gray-900 hover:bg-gray-100">Request a Quote</a>
          <a href="/services/" class="inline-flex items-center rounded-md border border-white/30 px-5 py-3 hover:bg-white/10">View Services</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Metro links -->
  <section class="mx-auto max-w-6xl px-6 py-12 md:py-16">
    <div class="grid gap-6 md:grid-cols-3">
      <a href="/expertise/land-survey-mill-park/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Mill Park</h3>
            <p class="mt-1 text-sm text-gray-600">North corridor delivery</p>
          </div>
          <img src="/icons/building.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/expertise/land-survey-moonee-ponds/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Moonee Ponds</h3>
            <p class="mt-1 text-sm text-gray-600">Inner north-west</p>
          </div>
          <img src="/icons/map.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/expertise/land-survey-clayton/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Clayton</h3>
            <p class="mt-1 text-sm text-gray-600">South east delivery</p>
          </div>
          <img src="/icons/level.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
    </div>
  </section>

  <!-- Service overview -->
  <section class="mx-auto max-w-6xl px-6 py-8 md:py-12">
    <ServiceOverview serviceType="land" />
  </section>

  <!-- Related reading -->
  <section class="mx-auto max-w-6xl px-6 pb-20">
    <div class="grid gap-4 md:grid-cols-2">
      <a href="/articles/total-stations-vs-gnss/" class="group rounded-lg border p-6 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Total Stations vs GNSS</h3>
            <p class="mt-1 text-sm text-gray-600">Methods for accuracy and efficiency</p>
          </div>
          <img src="/icons/gps.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/expertise/advanced-surveying-tools/" class="group rounded-lg border p-6 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Advanced Surveying Tools</h3>
            <p class="mt-1 text-sm text-gray-600">Technology supporting delivery</p>
          </div>
          <img src="/icons/laser.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
    </div>
  </section>

  <section class="bg-gray-900">
    <div class="mx-auto max-w-6xl px-6 py-12 md:py-16">
      <CallToAction title="Need a survey in Melbourne?" subtitle="Talk to our team about your next land survey." primaryText="Contact HR Surveyors" primaryHref="/contact" />
    </div>
  </section>
</Layout>
