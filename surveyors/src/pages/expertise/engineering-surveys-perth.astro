---
import Layout from '../../layouts/Layout.astro';
import { locationContent } from '../../utils/seo.ts';

// Schema.org structured data for SEO
const schemaData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Engineering Surveys Perth - Expert Analysis & Professional Services",
  "description": "Expert analysis of engineering surveying requirements in Perth from Western Australia's leading surveying professionals with 12+ years local experience.",
  "author": {
    "@type": "Organization",
    "name": "HR Surveyors",
    "url": "https://www.hrsurveyors.com.au"
  },
  "publisher": {
    "@type": "Organization",
    "name": "HR Surveyors",
    "logo": "https://www.hrsurveyors.com.au/images/hr-surveyors-logo.png"
  },
  "about": {
    "@type": "Service",
    "name": "Engineering Surveys Perth",
    "provider": {
      "@type": "Organization",
      "name": "HR Surveyors"
    },
    "areaServed": "Perth, Western Australia"
  }
};

// Get Perth location data
const perthContent = locationContent.perth;
const perthOffice = {
  address: '1/435 Vincent Street West, West Leederville, WA, 6007',
  areas: 'Perth Metro, Regional WA',
  specialties: ['Mining Projects', 'Infrastructure Development', 'Level Crossing Removals']
};
---

<Layout 
  title="Engineering Surveys Perth - Expert Analysis & Professional Services | HR Surveyors"
  description="Expert analysis of engineering surveying in Perth from WA's leading professionals. Comprehensive insights on Perth construction projects, mining infrastructure, and professional surveying standards."
>
  <!-- Schema.org structured data -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(schemaData)} />

  <main class="bg-white text-hr-dark">
    <!-- Hero Section -->
    <section class="relative py-20 md:py-32 bg-gradient-to-b from-gray-50 to-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-6xl font-bold mb-6 text-hr-dark">
            Engineering Surveys Perth - Expert Analysis
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-700 max-w-4xl mx-auto leading-relaxed">
            Leading WA Surveying Professionals: Perth Engineering Survey Analysis & Insights
          </p>
          <p class="text-lg mb-8 text-gray-600 max-w-3xl mx-auto">
            Professional analysis from Western Australia's established surveying experts
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact/" class="bg-hr-accent text-hr-dark px-8 py-4 rounded text-lg font-semibold hover:bg-opacity-90 transition-colors">
              Perth Consultation
            </a>
            <a href="/perth/" class="bg-transparent border-2 border-hr-dark text-hr-dark px-8 py-4 rounded text-lg font-bold hover:bg-hr-dark hover:text-white transition-all duration-300">
              Visit Perth Office
            </a>
          </div>
        </div>

        <!-- Local Stats -->
        <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto text-center">
          <div>
            <p class="text-3xl font-bold text-hr-dark mb-2">WA</p>
            <p class="text-gray-600">Headquarters</p>
          </div>
          <div>
            <p class="text-3xl font-bold text-hr-dark mb-2">12+</p>
            <p class="text-gray-600">Years Perth</p>
          </div>
          <div>
            <p class="text-3xl font-bold text-hr-dark mb-2">300+</p>
            <p class="text-gray-600">WA Projects</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Perth Market Analysis -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <h2 class="text-3xl md:text-4xl font-bold text-hr-dark mb-8 text-center">Perth Engineering Survey Market Analysis</h2>
        <div class="max-w-4xl mx-auto mb-12">
          <p class="text-xl leading-relaxed text-gray-700 mb-8">
            Perth's construction and infrastructure sector presents unique surveying challenges that require specialized Western Australian expertise. Our <a href="/about/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">Perth-based team</a>, headquartered in West Leederville, has established HR Surveyors as WA's leading engineering surveying firm through comprehensive understanding of local requirements.
          </p>
          <p class="text-lg leading-relaxed text-gray-600 mb-8">
            Western Australia's mining-driven economy, combined with major infrastructure developments and urban growth, creates demanding surveying requirements. Technical insights from our <a href="/articles/perth-surveyor-guide/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">Perth surveyor guide</a> demonstrate the complexity of integrating mining operations, residential development, and infrastructure projects within Perth's unique regulatory environment.
          </p>
        </div>

        <!-- Perth-Specific Challenges -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
            <h3 class="text-xl md:text-2xl font-bold text-hr-dark mb-6">
              Mining Integration
            </h3>
            <p class="text-gray-700 leading-relaxed mb-6">
              Perth's proximity to major mining operations requires engineering surveys that account for subsidence monitoring, heavy haulage routes, and resource extraction infrastructure integration with urban development projects.
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
            <h3 class="text-xl md:text-2xl font-bold text-hr-dark mb-6">
              Coastal Conditions
            </h3>
            <p class="text-gray-700 leading-relaxed mb-6">
              Perth's coastal environment presents unique challenges including sandy soils, groundwater variations, and coastal erosion considerations that impact foundation design and infrastructure surveying accuracy.
            </p>
          </div>

          <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
            <h3 class="text-xl md:text-2xl font-bold text-hr-dark mb-6">
              Rapid Development
            </h3>
            <p class="text-gray-700 leading-relaxed mb-6">
              Perth's ongoing urban expansion requires engineering surveys that can accommodate fast-track development timelines while maintaining accuracy standards for both residential and commercial projects.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Local Expertise Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <h2 class="text-3xl md:text-4xl font-bold text-hr-dark mb-8 text-center">Our Perth Engineering Survey Approach</h2>
        <div class="max-w-4xl mx-auto mb-12">
          <p class="text-xl leading-relaxed text-gray-700 mb-8">
            Based on our extensive experience with Perth construction projects, we've developed specialized methodologies that address Western Australia's unique surveying requirements. Our local expertise, combined with our <a href="/services/engineering-surveying-services/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">comprehensive engineering surveying services</a>, ensures optimal results for Perth's diverse project types.
          </p>
        </div>

        <!-- Perth Office Integration -->
        <div class="bg-white rounded-xl p-8 md:p-12 shadow-lg mb-16">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div>
              <h3 class="text-2xl font-bold text-hr-dark mb-6">Perth Office Capabilities</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-hr-accent mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                  <div>
                    <p class="font-semibold text-hr-dark">Address</p>
                    <p class="text-gray-600">{perthOffice.address}</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-hr-accent mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <div>
                    <p class="font-semibold text-hr-dark">Service Areas</p>
                    <p class="text-gray-600">{perthOffice.areas}</p>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-4 text-hr-dark">Perth Specializations</h3>
              <ul class="space-y-3">
                {perthOffice.specialties.map((specialty) => (
                  <li class="flex items-center">
                    <span class="w-2 h-2 bg-hr-accent rounded-full mr-3"></span>
                    <span class="text-gray-700">{specialty}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <!-- Recent Perth Projects -->
        <div class="bg-hr-dark rounded-xl p-8 md:p-12 text-white">
          <h3 class="text-3xl md:text-4xl font-bold mb-8 text-center text-hr-accent">Recent Perth Engineering Survey Projects</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h4 class="text-xl font-semibold text-hr-accent mb-3">Victoria Park-Canning Level Crossing Removal Project</h4>
              <p class="text-gray-300 text-sm">Complex infrastructure project requiring precise coordination between rail systems, road infrastructure, and existing utility networks in established urban environment.</p>
            </div>
            <div>
              <h4 class="text-xl font-semibold text-hr-accent mb-3">Lumiere Apartments, South Perth</h4>
              <p class="text-gray-300 text-sm">High-rise residential development requiring millimetre-precision surveying for foundation systems and structural elements in challenging riverside location.</p>
            </div>
            <div>
              <h4 class="text-xl font-semibold text-hr-accent mb-3">Casuarina Prison Expansion Project</h4>
              <p class="text-gray-300 text-sm">Specialized government infrastructure project requiring security-compliant surveying procedures and precise coordination with existing facility operations.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Commercial CTA Section -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Content Column -->
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-hr-dark mb-6">
              Perth Engineering Survey Consultation
            </h2>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              Connect with our Perth engineering survey specialists to discuss your Western Australian project requirements. Our local expertise and proven track record ensure your project benefits from comprehensive understanding of Perth's unique surveying challenges.
            </p>
            
            <!-- Contact Options -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/contact/"
                class="inline-flex items-center justify-center bg-hr-accent text-hr-dark px-8 py-4 rounded-lg text-lg font-bold hover:bg-opacity-90 transition-all duration-300 group focus:outline-none focus:ring-2 focus:ring-hr-accent focus:ring-offset-2"
              >
                <span>Perth Consultation</span>
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Related Services Column -->
          <div class="bg-gray-50 rounded-xl p-8">
            <h3 class="text-2xl font-bold text-hr-dark mb-8 text-center">Perth Surveying Expertise</h3>
            <div class="space-y-6">
              <div class="text-center">
                <h4 class="text-lg font-semibold text-hr-dark mb-3">WA Regional Knowledge</h4>
                <p class="text-gray-600 text-sm mb-4">Our <a href="/about/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">Perth office team</a> brings comprehensive understanding of Western Australian regulations, geology, and construction requirements.</p>
              </div>
              <div class="text-center">
                <h4 class="text-lg font-semibold text-hr-dark mb-3">Professional Services</h4>
                <p class="text-gray-600 text-sm mb-4">Perth engineering surveys integrated with our complete <a href="/services/professional-surveying-services/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">professional surveying services</a> for comprehensive project support.</p>
              </div>
              <div class="text-center">
                <h4 class="text-lg font-semibold text-hr-dark mb-3">Technology Leadership</h4>
                <p class="text-gray-600 text-sm mb-4">Advanced Perth surveying often enhanced with our <a href="/services/drone-surveying-services/" class="text-hr-accent hover:text-hr-dark transition-colors font-medium">drone surveying services</a> for optimal WA project outcomes.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 