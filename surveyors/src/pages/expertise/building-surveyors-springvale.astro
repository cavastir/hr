---
import Layout from '../../layouts/Layout.astro';
import CallToAction from '../../components/CallToAction.astro';
import ServiceOverview from '../../components/ServiceOverview.astro';

const title = 'Building Surveyors — Springvale';
const description = 'Survey support for building projects in Springvale: detail & feature, construction set-out, and as-constructed outcomes.';
---

<Layout title={title} description={description}>
  <!-- Hero: overlay band focusing on building context -->
  <section class="relative overflow-hidden bg-gray-900">
    <div class="absolute inset-0">
      <img src="/images/hr-surveyors-construction-site.jpg" alt="Building project survey support" class="h-full w-full object-cover opacity-40" loading="eager" />
      <div class="absolute inset-0 bg-gradient-to-b from-gray-900/60 via-gray-900/60 to-gray-900/80"></div>
    </div>
    <div class="relative mx-auto max-w-6xl px-6 pt-28 md:pt-36 pb-16 md:pb-24 text-white">
      <div class="max-w-3xl">
        <h1 class="text-3xl md:text-5xl font-semibold tracking-tight">Building Surveyors — Springvale</h1>
        <p class="mt-4 md:mt-6 text-base md:text-lg text-gray-100">
          Practical survey inputs for builders and designers — set-out, control and clear plans to keep delivery moving.
        </p>
        <div class="mt-6 md:mt-8 flex flex-wrap gap-3">
          <a href="/contact/" class="inline-flex items-center rounded-md bg-white px-5 py-3 text-gray-900 hover:bg-gray-100">Request a Quote</a>
          <a href="/services/" class="inline-flex items-center rounded-md border border-white/30 px-5 py-3 hover:bg-white/10">View Services</a>
        </div>
        <p class="mt-3 text-xs text-gray-300">Note: Page positions surveying support for building projects (not statutory building surveying).</p>
      </div>
    </div>
  </section>

  <!-- Project pathways -->
  <section class="mx-auto max-w-6xl px-6 py-12 md:py-16">
    <div class="grid gap-6 md:grid-cols-3">
      <a href="/services/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Professional Surveying Services</h3>
            <p class="mt-1 text-sm text-gray-600">Construction set-out, monitoring, as-built</p>
          </div>
          <img src="/icons/specificationsurvey.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/expertise/engineering-site-survey/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Engineering Site Survey</h3>
            <p class="mt-1 text-sm text-gray-600">Set-out and QA aligned to design</p>
          </div>
          <img src="/icons/level.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/expertise/advanced-surveying-tools/" class="group rounded-lg border p-6 bg-white hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Advanced Surveying Tools</h3>
            <p class="mt-1 text-sm text-gray-600">Technology supporting accuracy</p>
          </div>
          <img src="/icons/laser.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
    </div>
  </section>

  <!-- Service modules (professional + engineering blend) -->
  <section class="mx-auto max-w-6xl px-6 py-8 md:py-12">
    <ServiceOverview serviceType="professional" />
  </section>

  <!-- Supporting read -->
  <section class="mx-auto max-w-6xl px-6 pb-20">
    <div class="grid gap-4 md:grid-cols-2">
      <a href="/articles/total-stations-vs-gnss/" class="group rounded-lg border p-6 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Total Stations vs GNSS</h3>
            <p class="mt-1 text-sm text-gray-600">Choosing methods for efficiency</p>
          </div>
          <img src="/icons/gps.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
      <a href="/articles/engineering-surveyor-guide/" class="group rounded-lg border p-6 hover:bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium">Engineering Surveyor Guide</h3>
            <p class="mt-1 text-sm text-gray-600">Role on construction projects</p>
          </div>
          <img src="/icons/equipment.svg" alt="" class="h-6 w-6 opacity-60 group-hover:opacity-100" />
        </div>
      </a>
    </div>
  </section>

  <section class="bg-gray-900">
    <div class="mx-auto max-w-6xl px-6 py-12 md:py-16">
      <CallToAction title="Need survey support for a build?" subtitle="Talk to our team about set-out and as-built requirements." primaryText="Contact HR Surveyors" primaryHref="/contact" />
    </div>
  </section>
</Layout>
