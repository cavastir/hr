---
import Layout from '../layouts/Layout.astro';
import { fade } from 'astro:transitions';
import { officeLocations } from '../data/officeData.js';
import Icon from '../components/Icon.astro';
---

<Layout 
  title="Our Locations | HR Surveyors"
  description="Explore HR Surveyors' office locations across Australia. Find your nearest office in Victoria, Western Australia, Queensland, and New South Wales."
>
  <main class="bg-white text-hr-dark">
    <section class="py-32">
      <div class="container mx-auto px-4 max-w-6xl">
        <h1 transition:animate={fade({ duration: '0.5s' })} class="text-5xl lg:text-6xl font-bold mb-12 text-hr-dark text-center">Our Locations</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
          {officeLocations.map((office) => (
            <div class="relative bg-gray-100 rounded-lg p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">
              <a 
                href={`/locations/${office.slug}/`} 
                class="absolute top-3 right-3 p-1.5 text-hr-accent rounded-full hover:text-hr-dark focus:outline-none focus:ring-2 focus:ring-hr-accent focus:ring-opacity-50 transition-colors"
                aria-label={`View details for ${office.title}`}
                title={`View details for ${office.title}`}
              >
                <Icon name="arrow-up-right" class="w-5 h-5" />
              </a>
              <h3 class="text-2xl font-semibold mb-4 text-hr-dark pt-8">{office.title}</h3>
              <p class="text-lg mb-2">{office.address}</p>
              <p class="text-lg mb-4">{office.city}, {office.state} {office.postcode}</p>
              <a 
                href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(`${office.address}, ${office.city}, ${office.state} ${office.postcode}`)}`} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-block bg-hr-accent text-hr-dark px-4 py-2 rounded text-base font-semibold hover:bg-opacity-90 transition-colors relative overflow-hidden group mt-4"
              >
                <span class="relative z-10 group-hover:text-white transition-colors">Get Directions</span>
                <span class="absolute inset-0 bg-hr-dark transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
              </a>
            </div>
          ))}
        </div>

        <div class="text-center">
          <a href="/contact/" class="inline-block bg-hr-accent text-hr-dark px-6 py-3 rounded text-lg font-semibold hover:bg-opacity-90 transition-colors relative overflow-hidden group">
            <span class="relative z-10 group-hover:text-white transition-colors">Get in Touch</span>
            <span class="absolute inset-0 bg-hr-dark transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
